using case1.Data;
using case1.Models;
using case1.Services;

namespace case1.Data
{
    public static class DbInitializer
    {
        public static void Initialize(AppDbContext context)
        {
            // Veritabanı zaten dolu mu diye kontrol et (hata yakala)
            try
            {
                if (context.Users.Any() || context.Patients.Any())
                    return;
            }
            catch
            {
                // Tablolar henüz yoksa devam et
            }

            // Örnek kullanıcılar
            var users = new List<User>
            {
                new User 
                { 
                    Username = "doctor1",
                    FirstName = "Ali",
                    LastName = "Başkan",
                    DateOfBirth = new DateTime(1980, 6, 15),
                    PasswordHash = AuthService.HashPassword("password123"),
                    Role = "Doctor"
                },
                new User 
                { 
                    Username = "doctor2",
                    FirstName = "Ayşe",
                    LastName = "Yılmaz",
                    DateOfBirth = new DateTime(1985, 3, 22),
                    PasswordHash = AuthService.HashPassword("password123"),
                    Role = "Doctor"
                }
            };

            context.Users.AddRange(users);
            context.SaveChanges();

            // Örnek hastalar
            var patients = new List<Patient>
            {
                new Patient 
                { 
                    Name = "Ahmet",
                    Surname = "Yıldız",
                    BirthDate = new DateTime(1990, 5, 15)
                },
                new Patient 
                { 
                    Name = "Fatma",
                    Surname = "Kaya",
                    BirthDate = new DateTime(1985, 8, 22)
                },
                new Patient 
                { 
                    Name = "Mehmet",
                    Surname = "Demir",
                    BirthDate = new DateTime(1992, 3, 10)
                }
            };

            context.Patients.AddRange(patients);
            context.SaveChanges();

            // Örnek tıbbi kayıtlar
            var records = new List<MedicalRecord>
            {
                new MedicalRecord 
                { 
                    PatientId = patients[0].Id,
                    Date = DateTime.UtcNow.AddDays(-5),
                    DoctorRemarks = "Kan basıncı normal",
                    Diagnosis = "Kontrol muayenesi"
                },
                new MedicalRecord 
                { 
                    PatientId = patients[0].Id,
                    Date = DateTime.UtcNow.AddDays(-10),
                    DoctorRemarks = "Vitamin eksikliği",
                    Diagnosis = "Anemi belirtileri"
                },
                new MedicalRecord 
                { 
                    PatientId = patients[1].Id,
                    Date = DateTime.UtcNow.AddDays(-3),
                    DoctorRemarks = "Şeker seviyesi yüksek",
                    Diagnosis = "Diyabet kontrolü"
                }
            };

            context.MedicalRecords.AddRange(records);
            context.SaveChanges();
        }
    }
}
